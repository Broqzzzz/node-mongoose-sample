<h2>Add Student</h2>
<p id="msg"></p>
<div class="row">
  <div class="col-sm-6">
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name">
      </div>
      <div class="form-group">
        <label for="idnum">ID Number</label>
        <input type="number" class="form-control" id="idnum" name="idnum">
      </div>
      <div class="form-group">
        <label>Gender</label>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="gender" id="genderMale" value="boy">
          <label class="form-check-label" for="genderMale">Male</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="gender" id="genderFemale" value="girl">
          <label class="form-check-label" for="genderFemale">Female</label>
        </div>
      </div>
      <button type="button" id="addStudent" class="btn btn-primary">Add Student</button>
    </form>
  </div>
</div>

<hr />

<h2>Find Student</h2>
<div class="row">
  <div class="col-sm-6">
    <form>
      <div class="form-group">
        <label for="searchName">Name</label>
        <input type="text" class="form-control" id="searchName" name="searchName">
      </div>
      <button type="button" id="findStudent" class="btn btn-primary">Find Student</button>
    </form>
  </div>
</div>
<div id="studentList">
</div>
